<form method="post" action="{{ path('massage_delete', {'id': massage.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ massage.id) }}">
    <button class="ui right floated red button "><i class="trash icon"></i></button >
</form>
