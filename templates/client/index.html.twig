{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}

    <div class="ui raised  container segment">
<h1 class="ui header tall center aligned">CLIENT</h1>

        <a class=" ui button" href="{{ path('client_new') }}"> <i class="plus icon"></i>new</a></div>
    <div class="ui raised  container segment">
        <h3 class="ui header"style="margin-top: 5%">TOUS</h3>
    <table class="ui table striped">
        <thead>
            <tr>

                <th>Firstname</th>
                <th>Lastname</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Address</th>
                <th>PostCode</th>
                <th>City</th>
                <th>Profile</th>
                <th>Salon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>

                <td>{{ client.firstname }}</td>
                <td>{{ client.lastname }}</td>
                <td>{{ client.mail }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.postCode }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.profile }}</td>
                {% if client.company %}
                <td>{{ client.company.companyName }}</td>

                {% else%}
                    <td>-</td>
                {% endif %}

                <td>
                    <div class="ui buttons">
                    <a class="ui button" href="{{ path('client_show', {'id': client.id}) }}"><i class="eye icon"></i> </a>
                        <div class="or"></div>
                    <a class="ui button" href="{{ path('client_edit', {'id': client.id}) }}"><i class="pencil icon"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="ui raised  container segment">
        <h3 class="ui header"style="margin-top: 5%">SALONS</h3>
        <table class="ui table striped">
            <thead>
            <tr>
                <th>Salon</th>

                <th>Mail</th>
                <th>Phone</th>
                <th>Address</th>
                <th>PostCode</th>
                <th>City</th>


                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for salon in salons %}
                <tr>
                    <td>{{ salon.company.companyName }}</td>

                    <td>{{ salon.mail }}</td>
                    <td>{{ salon.phone }}</td>
                    <td>{{ salon.address }}</td>
                    <td>{{ salon.postCode }}</td>
                    <td>{{ salon.city }}</td>





                    <td>
                        <div class="ui buttons">
                            <a class="ui button" href="{{ path('client_show', {'id': salon.id}) }}"><i class="eye icon"></i> </a>
                            <div class="or"></div>
                            <a class="ui button" href="{{ path('client_edit', {'id': salon.id}) }}"><i class="pencil icon"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="ui raised  container segment">
        <h3 class="ui header"style="margin-top: 5%">PARTICULIERS</h3>
        <table class="ui table striped">
            <thead>
            <tr>

                <th>Firstname</th>
