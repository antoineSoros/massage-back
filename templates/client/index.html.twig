                <th>Phone</th>
                <th>Address</th>
                <th>PostCode</th>
                <th>City</th>


                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for particulier in particuliers %}
                <tr>

                    <td>{{ particulier.firstname }}</td>
                    <td>{{ particulier.lastname }}</td>
                    <td>{{ particulier.mail }}</td>
                    <td>{{ particulier.phone }}</td>
                    <td>{{ particulier.address }}</td>
                    <td>{{ particulier.postCode }}</td>
                    <td>{{ particulier.city }}</td>


                    <td>
                        <div class="ui buttons">
                            <a class="ui button" href="{{ path('client_show', {'id': particulier.id}) }}"><i class="eye icon"></i> </a>
                            <div class="or"></div>
                            <a class="ui button" href="{{ path('client_edit', {'id': particulier.id}) }}"><i class="pencil icon"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

